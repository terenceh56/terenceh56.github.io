---
import {site} from "@/consts";
import {t} from '@/i18n/utils'
import getUrl from "@/utils/getUrl";
---

<div class="w-full py-6 mt-8 border-t border-skin-line transition-colors duration-300">
  <div class="flex flex-col items-center justify-center text-sm text-skin-base opacity-80 hover:opacity-100 transition-opacity duration-300">
    <div class="flex items-center space-x-2 mb-2">
      <span>&copy; {new Date().getFullYear()}</span>
      <span class="font-medium">{site.author}</span>
    </div>
    
    <div class="flex items-center space-x-3 text-xs text-skin-dodge">
      {
        site.beian && (
          <a rel="nofollow" target="_blank" href="https://beian.miit.gov.cn/" class="hover:text-skin-active transition-colors">
            {site.beian}
          </a>
          <span class="opacity-50">|</span>
        )
      }
      <a href={getUrl("/sitemap-0.xml")} class="hover:text-skin-active transition-colors">{t('footer.sitemap')}</a>
      <span class="opacity-50">|</span>
      <a class="hover:text-skin-active transition-colors" href="https://github.com/cirry/astro-yi" target="_blank">Theme Yi</a>
    </div>
  </div>
</div>

<style>
  .border-skin-line {
    border-color: rgba(var(--color-border), 0.5);
  }
</style>